<div id="shopify-section-hero" class="shopify-section index-section index-section--flush">
  <div class="hero hero--large hero__overlay box ratio-container lazyload"
     style="background-position: center; background-image: url('{{ section.settings.sundays_hero | img_url }}');">

    <div class="hero__inner">
      <div class="page-width text-center">

          <h2 class="h1 mega-title mega-title--large" style="font-family: {{ section.settings.title_font.family }};">{{ section.settings.hero_title }}</h2>


          <div class="rte-setting mega-subtitle mega-subtitle--large"><p style="font-family: {{ section.settings.subtext_font.family }};">{{ section.settings.hero_text }}</p></div>


          <a href="#subscribe" class="btn hero__btn">
            {{ section.settings.button_text }}
          </a>

      </div>
    </div>
  </div>
</div>

<noscript>
  <div class="hero hero--large hero__overlay" style="background-image: url('{{ section.settings.sundays_hero | img_url }}'); background-position: center center;"></div>
</noscript>
{% schema %}

  {
    "name": "Sundays Hero",
    "class": "sundays-section",
    "settings": [
      {
        "type": "image_picker",
        "id": "sundays_hero",
        "label": "Image:"
      },
      {
        "type": "text",
        "id": "hero_title",
        "label": "Hero Title:",
        "default": "Farm to Cup Sundays"
      },
      {
        "type": "text",
        "id": "hero_text",
        "label": "Hero Subtext:",
        "default": "Default Subtitle"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button Text:",
        "default": "SUBSCRIBE"
      }
    ]
  }

{% endschema %}